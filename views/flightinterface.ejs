<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <title>Flight Interface</title>
        <style>
            .main{
                background-color: #273c75;
                width: 100vw;
                height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .box{
                width: 50%;
                height: 50%;
                background-color: #ffff;
                border-radius: 10px;
                padding: 15px;
            }
            .heading{
                font-size: 22px;
                letter-spacing: 1;
                color: #273c75;
                
            }
        </style>
    </head>
    
        <div class="main">
          <div class="box">
            <div class="heading">
                <img src="/images/f.png" width="42">
                Flight Interface
          </div>
          <form class="row g-3">
            <div class="col-md-6">
              <label for="flightname" class="form-label">Flight Name</label>
              <input type="text" class="form-control" id="flightname" name="flightname">
              
            </div>
            <div class="col-md-6">
                <label for="flighttype" class="form-label">Flight Type</label>
                <select id="flighttype" class="form-select" name="flighttype">
                  <option selected>Choose...</option>
                  <option>Economy</option>
                  <option>Buisness</option>
                  <option>Economy/Buisness</option>
    
    
                </select>
              </div>        

              <div class="col-md-6">
                <label for="noofseat" class="form-label">Total Seat</label>
                <input type="text" class="form-control" id="noofseat" name="noofseat">
              </div>
              

          </form>
           </div>
          
        </div>
       
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</html>