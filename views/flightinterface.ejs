<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <title>Flight Interface</title>
        <style>
            .main{
                background-color: #273c75;
                width: 100vw;
                height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .box{
                width: 50%;
                height: auto;
                background-color: #ffff;
                border-radius: 10px;
                padding: 15px;
            }
            .heading{
                font-size: 22px;
                letter-spacing: 1;
                color: #273c75;
                
            }
            .dayss{
              flex-direction: row;
              display: flex;
              justify-content:space-evenly;
            }
            .buttonstyle{
              width: 100%;
            }
        </style>
    </head>
    
        <div class="main">
          <div class="box">
            <div class="heading">
                <img src="/images/f.png" width="42">
                Flight Interface
          </div>
          <form class="row g-3">
            <div class="col-md-6">
              <label for="flightname" class="form-label">Flight Name</label>
              <input type="text" class="form-control" id="flightname" name="flightname">
              
            </div>
            <div class="col-md-6">
                <label for="flighttype" class="form-label">Flight Type</label>
                <select id="flighttype" class="form-select" name="flighttype">
                  <option selected>Choose...</option>
                  <option>Economy</option>
                  <option>Buisness</option>
                  <option>Economy/Buisness</option>
    
    
                </select>
              </div>        

              <div class="col-md-6">
                <label for="noofseat" class="form-label">Total Seat</label>
                <input type="text" class="form-control" id="noofseat" name="noofseat">
              </div>
              <div class="col-md-6">
                <label for="days" class="form-label"><b>Select Flight Days</b></label>
                <div class="dayss"> 
                  <span class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Mon" id="days">
                    <label for="days" class="form-label">
                      Mon
                    </label>

                  </span>
                  <span class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Tue" id="days">
                    <label for="days" class="form-label">
                      Tue
                    </label>

                  </span>
                  <span class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Wed" id="days">
                    <label for="days" class="form-label">
                      Wed
                    </label>

                  </span>
                  <span class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Thu" id="days">
                    <label for="days" class="form-label">
                      Thu
                    </label>

                  </span>
                  <span class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Fri" id="days">
                    <label for="days" class="form-label">
                      Fri
                    </label>

                  </span>
                  <span class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Sat" id="days">
                    <label for="days" class="form-label">
                      Sat
                    </label>

                  </span>
                  <span class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Sun" id="days">
                    <label for="days" class="form-label">
                      Sun
                    </label>

                  </span>

                </div>


              </div >
              <div class="col-md-3">
                <label for="sourcecity" class="form-label">Source City</label>
                <select id="sourcecity" class="form-select" name="sourcecity">
                  <option selected>Source City...</option>
    
    
                </select>
              </div>
              <div class="col-md-3">
                <label for="deptime" class="form-label">Departure Time</label>
                <input type="time" class="form-control" id="deptime" name="deptime">
                

              </div>  
              <div class="col-md-3">
                <label for="destinationcity" class="form-label">Destination City</label>
                <select id="destinationcity" class="form-select" name="destinationcity">
                  <option selected>Destination City...</option>
    
    
                </select>
              </div> 
              <div class="col-md-3">
                <label for="arrtime" class="form-label">Arrival Time</label>
                <input type="time" class="form-control" id="arrtime" name="arrtime">
                

              </div>   
              
              <div class="col-md-6">
                <label for="Company" class="form-label">Company</label>
                <input type="text" class="form-control" id="Company" name="Company">
              </div>
              <div class="col-md-6">
                <label for="logo" class="form-label">Logo</label>
                <input type="file" class="form-control" id="logo" name="logo">
              </div>
              <div class="col-md-6">
                <button type="submit" class="btn btn-secondary buttonstyle"><b>Submit</b></button>
                
              </div>
              <div class="col-md-6">
                <button type="reset" class="btn btn-secondary buttonstyle"><b>Reset</b></button>
                
              </div>

          </form>
           </div>
          
        </div>
       
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</html>