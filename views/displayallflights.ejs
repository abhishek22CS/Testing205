<style>
    .main{
        background-color: #273c75;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        
    }
    .box{
        width: 80%;
        height: auto;
        background-color: #ffff;
        border-radius: 10px;
        padding: 15px;
    }
    .heading{
        font-size: 22px;
        letter-spacing: 1;
        color: #273c75;
        
    }
    .dayss{
      flex-direction: row;
      display: flex;
      justify-content:space-evenly;
    }
    .buttonstyle{
      width: 100%;
    }
</style>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div class="main"> 
        <div class="box"> 
          <div class="heading">
            <img src="/images/f.png" width="42">
          List Of Flights
      <a href="/flightenquiry/flightpage">    <img src="/images/list.png" alt="" width="35 " style="margin-left: 60rem;"></a>
      </div>
      
    <table class="table  table-hover">
        <thead>
          <tr>
            <th scope="col">Flight Name</th>
            <th scope="col">Day/seatss</br></th>
            <th scope="col">Source City</th>
            <th scope="col">Destination City</th>
            <th scope="col">Company</th>
            <th scope="col">Logo</th>
            <th scope="col">Edit/Delete</th>



          </tr>
        </thead>
        <tbody>
          <tr>
            <% data.map((item)=>{ %>
         
            <th scope="row">
                <%=item.flightname%>
                <br>
                <%=item.flighttype%>

            </th>
            <td>
                Seats:<%=item.totalseats%>
                <br>
                <%=item.days%>
            </td>
            <td>
                <%=item.source%>
                <br>
                    <%=item.departuretime%>

            </td>
            <td>
                <%=item.destination%>
                <br>
                    <%=item.arrivaltime%>

            </td>
            <td>
                <%=item.company%>
            </td>
              <td> 
                <a href="/flightenquiry/searchbyidforimage?fid=<%=item.flightid%>">
                  <img src="/images/<%=item.logo %>"  width="30"/></a> 
            </td>
                    <!-- creating a link by a href section for update and delete -->
            <td>          
                <a href="/flightenquiry/searchbyid?fid=<%=item.flightid%>">
              Edit/Delete
            </a></td>
        
          </tr>
         <%}) %>
        </tbody>
      </table>
      
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        </div>
        </div>
    </body>
</html>